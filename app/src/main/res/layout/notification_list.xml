<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    card_view:cardCornerRadius="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

        <TextView
            android:id="@+id/textViewNotificationItemLabel"
            style="@style/TextViewNotificationsLabel"
            android:text="Tu Fecha Limite se acerca"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/textViewNotificationItemTime"
            style="@style/TextViewNotificationsContent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="15min"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/textViewNotificationItemContent"
            style="@style/TextViewNotificationsContent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewNotificationItemLabel"
            android:text="Descripcion de Notificacion"
            android:textIsSelectable="false"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>