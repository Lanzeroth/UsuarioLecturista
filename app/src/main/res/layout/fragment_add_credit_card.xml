<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              tools:context="com.fourtails.usuariolecturista.fragments.PayAddCreditCardFragment"
              android:orientation="vertical"
              android:padding="20dp">

    <!--<TextView-->
    <!--style="@style/TextViewLabelMedium"-->
    <!--android:text="@string/labelCreditCardType"-->
    <!--android:id="@+id/textView7" />-->

    <!--<Spinner-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:entries="@array/drop_down_credit_card_type"-->
    <!--android:id="@+id/spinnerCreditCardSelector" />-->

    <TextView
        style="@style/TextViewLabelMedium"
        android:text="@string/labelCreditCardNumber"
        android:id="@+id/textView8"
        android:layout_marginTop="10dp"/>

    <EditText
        style="@style/RobotoEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextCreditCardNumber"
        android:inputType="number"
        android:maxLength="16"/>

    <TextView
        style="@style/TextViewLabelMedium"
        android:text="@string/labelNameOnCreditCard"
        android:layout_marginTop="10dp"
        android:id="@+id/textView9"/>

    <EditText
        style="@style/RobotoEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextCreditCardName"
        android:text="Carlos Labrado"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <TextView
                style="@style/TextViewLabelMedium"
                android:text="@string/labelSecurityCode"
                android:layout_marginTop="10dp"
                android:id="@+id/textView10"/>

            <EditText
                style="@style/RobotoEditText"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextCCV"
                android:text="111"
                android:maxLength="4"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp">

            <TextView
                style="@style/TextViewLabelMedium"
                android:text="@string/labelExpirationDate"
                android:layout_marginTop="10dp"
                android:id="@+id/textView11"/>

            <EditText
                style="@style/RobotoEditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:editable="false"
                android:focusable="false"
                android:id="@+id/editTextCreditCardExpirationDate"/>
        </LinearLayout>

    </RelativeLayout>

    <CheckBox
        style="@style/RobotoCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelCheckBoxAgreedWithCCTAC"
        android:id="@+id/checkBoxAgreedTAC"
        android:checked="false"/>

    <TextView
        style="@style/RobotoEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/textViewLabelSubTotalPay"
        android:textSize="15sp"
        android:text="@string/labelSubTotal"
        android:layout_marginTop="20dp"/>

    <TextView
        style="@style/RobotoEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/textViewSubTotalPay"
        android:textSize="30sp"
        android:text="132.00"
        android:layout_marginTop="5dp"/>

    <Button
        style="@style/RobotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelButtonPayFragmentPay"
        android:id="@+id/buttonPayWithCC"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
